@model Gourmet.Models.Person

@using (Html.BeginForm("Item", "Personnel", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Position)
            </div>
            <div class="editor-field">
                <select name="Position" value="@Model.Position">
                    <option value="Официант"@( Model.Position == "Официант" ? " selected" : "" )>Официант</option>
                    <option value="Повар" @( Model.Position == "Повар" ? " selected" : "")>Повар</option>
                    <option value="Шеф-повар" @( Model.Position == "Шеф-повар" ? " selected" : "")>Шеф-повар</option>

                </select>
                @Html.ValidationMessageFor(model => model.Position)
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary ml-3 mr-2">Сохранить</button>
            @Html.ActionLink("Отмена", "Index", "Personnel", new object(), new { @class = "btn btn-danger" })
        </div>
    </fieldset>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>