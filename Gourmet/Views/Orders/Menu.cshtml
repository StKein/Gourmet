@model IEnumerable<Gourmet.Models.Dish>

@{
    ViewBag.DishListForOrder = true;
}

@using (Ajax.BeginForm("SaveDishes", new AjaxOptions { OnSuccess = "closePopup", UpdateTargetId = "order_menu" }))
{
    @Html.AntiForgeryToken()
    <div class="order_menu_wrapper">
        @Html.Partial("DishList", @Model)
        <div class="row">
            <button type="submit" class="btn btn-primary ml-3 mr-2">Сохранить</button>
            <span class="btn btn-danger _popup_close">Отмена</span>
        </div>
    </div>
}

<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>